
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> Todos os Usuarios</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Vizualizar Usuario</h2>
            <span class="text-light">Consulte os Dados do Usuario Abaixo</span>
        </div>

        
         <!-- form handling -->
 <form method="GET" id="show_user">
    <div class="add_user">
        <div class="form-group">
            <label for="nome" class="text-light">Nome:</label>
            <input type="hidden" name="id" value="<%= user._id%>">
            <input type="text" name="nome" value="<%= user.nome%>" disabled="disabled">
        </div>
        <div class="form-group">
            <label for="idade" class="text-light">Idade:</label>
            <input type="text" name="idade" value="<%= user.idade%>" disabled="disabled">
        </div>
        
        <div class="form-group">
            <label for="altura" class="text-light">Altura:</label>
            <input type="text" name="altura" value="<%= user.altura%>" disabled="disabled">
        </div>

       
        <div class="form-group">
            <label for="peso" class="text-light">Peso:</label>
            <input type="text" name="peso" value="<%= user.peso%>" disabled="disabled">
        </div>

        <div class="form-group">
            <label for="sexo" class="text-light">Sexo:</label>
            <input type="text" name="sexo" value="<%= user.sexo%>" disabled="disabled">
        </div>

        <div class="form-group">
            <label for="sintomas" class="text-light">Tem Sintomas:</label>
            <input type="text" name="sintomas" value="<%= user.sintomas%>" disabled="disabled">
        </div>
                
        <div class="form-group">
            <label for="teste" class="text-light">Sobre o Teste de Covid? </label>
            <input type="text" name="teste" value="<%= user.teste%>" disabled="disabled">
        </div>

        <div class="form-group">
            <label for="cronico" class="text-light">É Doente Cronico? </label>
            <input type="text" name="cronico" value="<%= user.cronico%>" disabled="disabled">
        </div>

        <div class="form-group">
            <label for="risco" class="text-light">É do Grupo de Risco? </label>
            <input type="text" name="risco" value="<%= user.risco%>" disabled="disabled">
        </div>

        <div class="form-group">
            <label for="mental" class="text-light">Se Sente Triste ou Ansioso? </label>
            <input type="text" name="mental" value="<%= user.mental%>" disabled="disabled">
        </div>

        <div class="form-group">
      <label for="imc" class="text-light">IMC:</label>
       <input type="text" disabled="disabled" name="imc" value="<%= parseFloat((user.peso/(user.altura*user.altura))*100).toFixed(2)%>">
  </div>

                                    <div class="form-group">
                                        <label for="decisao" class="text-light">Situação Covid:</label>
                                         <input type="text" disabled="disabled" name="decisao" value="<%= user.decisao%>">
                                        </div>

                                        <div class="form-tittle text-center">
                                            <h2 class="text-dark">Recomendações</h2>
                                            <span class="span text-light">Se você estiver com suspeita de Covid:</span><br>
                                            <a href="map/localizacao.html" class="2">Verifique o mapa com lugares destacados para Teste de Covid-19</a>
                                    
                                        </div>
        
        </div>
    </div>
</form>
       
    </div>
    
</main>
<!-- /Main Site -->

