<!-- form handling-->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="nome" class="text-light">Nome:</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="nome" value="" placeholder= "Antonio Fagundes">
        </div>

        <div class="form-group">
            <label for="idade" class="text-light">Idade:</label>
            <input type="text" name="idade" value="" placeholder= "25">
        </div>

        <div class="form-group">
            <label for="altura" class="text-light">Altura:</label>
            <input type="text" name="altura" value="" placeholder= "170">
        </div>

       
        <div class="form-group">
            <label for="peso" class="text-light">Peso:</label>
            <input type="text" name="peso" value="" placeholder= "65">
        </div>

        
        <div class="form-group">
            <label for="sexo" class="text-light">Sexo:</label>
            <div class="radio inline">
                <input type="radio" id="radio-1" name="sexo" value="Masculino">
                <label for="radio-1" class="radio-label">Masculino</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="sexo" value="Feminino">
                <label for="radio-2" class="radio-label">Feminino</label>
            </div>

            
            <div class="form-group">
                <label for="sintomas" class="text-light">Tem Sintomas:</label>
                <div class="radio inline">
                    <input type="radio" id="radio-3" name="sintomas" value="ativos">
                    <label for="radio-3" class="radio-label">Ativos</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-4" name="sintomas" value="inativos">
                    <label for="radio-4" class="radio-label">Inativos</label>
                </div>

                
                <div class="form-group">
                 <label for="Teste" class="text-light">Sobre o Teste de Covid:</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="teste" value="Teste Positivo">
                        <label for="radio-5" class="radio-label">Teste Positivo</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-6" name="teste" value="Tetste Negativo">
                        <label for="radio-6" class="radio-label">Teste Negativo</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-7" name="teste" value="nunca">
                        <label for="radio-7" class="radio-label">Nunca Testou</label>
                    </div>
                    
                           <div class="form-group">
                            <label for="grupo" class="text-light">É Doente Cronico?</label>
                               <div class="radio inline">
                                   <input type="radio" id="radio-8" name="cronico" value="Sim">
                                   <label for="radio-8" class="radio-label">Sim</label>
                               </div>
                               <div class="radio inline">
                                   <input type="radio" id="radio-9" name="cronico" value="Não">
                                   <label for="radio-9" class="radio-label">Não</label>
                               </div>

                           <div class="form-group">
                            <label for="grupo" class="text-light">É do Grupo de Risco?</label>
                               <div class="radio inline">
                                   <input type="radio" id="radio-10" name="risco" value="Sim">
                                   <label for="radio-10" class="radio-label">Sim</label>
                               </div>
                               <div class="radio inline">
                                   <input type="radio" id="radio-11" name="risco" value="Não">
                                   <label for="radio-11" class="radio-label">Não</label>
                               </div>
                               <div class="form-group">
                                <label for="mental" class="text-light">Se Sente Triste ou Ansioso?</label>
                                   <div class="radio inline">
                                       <input type="radio" id="radio-12"name="mental" value="Sim">
                                       <label for="radio-12" class="radio-label">Sim</label>
                                   </div>
                                   <div class="radio inline">
                                       <input type="radio" id="radio-13" name="mental" value="Não">
                                       <label for="radio-13" class="radio-label">Não</label>
                                   </div>
                                   <div class="form-group">
                                       <button type="submit" class="btn text-dark update">Salvar</button>
                                   </div>
            
        </div>
    </div>

</form>